#------------------------------------------------------------------------------
VERSION = BWS.01
#------------------------------------------------------------------------------
!ifndef ROOT
ROOT = $(MAKEDIR)\..
!endif
#------------------------------------------------------------------------------
MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS = MinhaDLL.dll DLL_Implicita.exe DLL_Explicita.exe
#------------------------------------------------------------------------------
default: $(PROJECTS)
#------------------------------------------------------------------------------

MinhaDLL.dll: MinhaDLL.dpr
  $(DCC)

DLL_Implicita.exe: DLL_Implicita.dpr
  $(DCC)

DLL_Explicita.exe: DLL_Explicita.dpr
  $(DCC)


